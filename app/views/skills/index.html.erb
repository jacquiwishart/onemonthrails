<div container> 
<% if user_signed_in? %>
<h1>Your Skills</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  
    <% @skills.each do |skill| %>
      <%if skill.user == current_user %>
        <tr>
            <td><%= skill.description %></td>
            <td><%= link_to edit_skill_path(skill) do %>
            <span class="glyphicon glyphicon-edit"></span>
            <% end %> &nbsp; &nbsp; 
            <%= link_to skill, method: :delete, data: { confirm: 'Are you sure? This cannot be undone.' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              <%end%>
            </td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<div>

    <span class:"gliphicon glyphicon-plus"></span>
<%= link_to new_skill_path, class: "btn btn-primary" do%>
<span class="glyphicon glyphicon-plus"></span>
Add New
<%end%>
</div>
<br>
<% else %>

<% end %>

</div>

